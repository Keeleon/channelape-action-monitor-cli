{
  "name": "channelape-action-monitor-cli",
  "version": "0.0.0",
  "description": "Allows you to choose which business(es) and channel(s) you want to monitor for completed / erred actions. Will alert you with a native OS popup.",
  "license": "UNLICENSED",
  "private": true,
  "author": {
    "name": "Craig A. Simko",
    "email": "craigs1701@gmail.com"
  },
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "prepublishOnly": "npm run compile",
    "start": "node dist/index.js",
    "compile": "tsc && tsc -p test/tsconfig.json",
    "lint": "tslint -p tsconfig.json && tslint -p test/tsconfig.json",
    "unit-test": "mocha --opts ./test/mocha.opts",
    "watch-unit-test": "mocha --recursive --compilers ts:ts-node/register --watch test/**/*.spec.*",
    "pretest": "npm run compile && npm run lint",
    "test": "npm run unit-test",
    "posttest": "npm run cover",
    "cover": "nyc npm run unit-test"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "channelape",
    "webhook"
  ],
  "dependencies": {
    "channelape-logger": "^0.1.5",
    "channelape-sdk": "^1.5.0",
    "inquirer": "^6.2.1"
  },
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/inquirer": "0.0.43",
    "@types/mocha": "^2.2.48",
    "@types/node": "^7.0.63",
    "@types/sinon": "^4.3.1",
    "@types/sinon-express-mock": "^1.3.4",
    "chai": "^4.1.2",
    "istanbul": "^0.4.5",
    "mocha": "^3.5.3",
    "mocha-typescript": "^1.1.12",
    "node-rest-client": "^3.1.0",
    "nyc": "^11.7.1",
    "sinon": "^4.5.0",
    "sinon-express-mock": "^2.0.4",
    "ts-node": "^6.1.1",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "^5.8.0",
    "typescript": "^2.8.3"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "lcov",
      "text",
      "text-summary"
    ],
    "report-dir": "./reports/lcov"
  }
}
